@inherits UmbracoViewPage
@{
    var backgroundImage = "";
    var title = Model.HasValue("title") ? Model.Value("title") : Model.Name;
    var subtitle = Model.HasValue("subtitle") ? Model.Value("subtitle") : @Html.Raw("&nbsp;");
}

@try
{
    backgroundImage = Model.Value<IPublishedContent>
    ("mainImage").Url;
}
    catch(NullReferenceException)
{
    backgroundImage = "";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('@backgroundImage') ">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-11 col-lg-9 col-xl-8">
                <div class="site-heading">
                    <h1>@title</h1>
                    <span class="subheading">@subtitle</span>
                </div>
            </div>
        </div>
    </div>
</header>
